<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.TipTime" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryContainer">@color/blue_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryContainer">@color/blue_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#006d40</item>
        <item name="colorSecondaryContainer">#95f7b9</item>
        <item name="colorOnSecondaryContainer">#002110</item>
        <item name="colorOnSecondary">@color/white</item>
        <!--background color. -->
        <item name="backgroundColor">#f3feff</item>
        <item name="colorOnBackground">#002022</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryContainer</item>
        <!-- Text input fields -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <!-- Radio buttons -->
        <item name="radioButtonStyle">@style/Widget.TipTime.CompoundButton.RadioButton</item>
        <!-- Switches -->
        <item name="switchStyle">@style/Widget.TipTime.CompoundButton.Switch</item>
    </style>

</resources>